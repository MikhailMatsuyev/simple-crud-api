{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API with in-memory database",
  "main": "dist/server.js",
  "scripts": {
    "start:dev": "ts-node-dev src/server.ts",
    "start:prod": "tsc && node dist/server.js",
    "start:multi": "tsc && node dist/cluster.js",
    "test-balancer": "ts-node src/scripts/test-balancer.ts",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "add-user": "ts-node src/scripts/addUser.ts",
    "delete-user": "ts-node src/scripts/deleteUser.ts",
    "list-users": "ts-node src/scripts/listUsers.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.24",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
